<style>
  textarea{
    resize:none;
    margin-bottom: 20px;
  }
  .kuboon{
    border:3px solid #730E15;
    text-align: center;
    margin-bottom:10px;
  }
</style>
<div class = 'container'>
  <h2>글쓰기</h2>
  <form method= "get" action = "/home/create">
    <div class="form-group">
      <label for="title">제목</label>
      <input type="text" class="form-control" id="title" name = "title" placeholder="title">
    </div>
    <div class="form-group">
      <label for="content">내용</label>
      <textarea name = 'content' id = 'content' class = 'form-control' rows="6"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  <h2>글잔치</h2>
  <% @posts.each do |post| %>
    <div class = 'kuboon'>
      <h3><%=post.title%></h3>
      <p><%=post.content%></p>
      <a href = '/home/read/<%=post.id%>'>읽기</a>
      <a href = '/home/update/<%=post.id%>'>수정하기</a>
      <a href = '/home/destroy/<%=post.id%>'>삭제하기</a>

      <form method= "get" action = "/home/<%= post.id %>/reply_create">
        <div class="form-group">
          <label for="title">댓글</label>
          <input type="text" class="form-control" id="title" name = "title" placeholder="title">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <% post.comments.each do |c| %>
        <p><%= c.title %></p>
      <% end %>
    </div>
  <% end %>
</div>
